@model InterestedDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col s12 m8">
            <div class="card minhas-ofertas">
                <div class="card-content">
                    <span class="card-title">Minhas Ofertas</span>
                    <table class="striped">
                        <thead>
                            <tr>
                                <th>Leilão</th>
                                <th>Valor</th>
                                <th>Situação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bid in Model.MyOffers)
                            {
                                <tr>
                                    <td>@bid.Auction.Title</td>
                                    <td>@bid.Amount</td>
                                    <td>Atual</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Leilões Favoritos</span>
                    <ul class="collection">
                        @foreach (var favorite in Model.FavoriteAuctions)
                        {
                            <li class="collection-item">
                                @favorite.Title
                                <a href="#!" class="secondary-content">
                                    <i class="material-icons">close</i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
