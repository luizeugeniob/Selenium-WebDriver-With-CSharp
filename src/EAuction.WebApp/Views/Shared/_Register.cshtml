@model EAuction.WebApp.Models.RegisterViewModel

<form class="card-panel" asp-action="Insert" asp-controller="User">
    <div class="input-field">
        <input asp-for="Name" />
        <label asp-for="Name"></label>
        <span class="helper-text msg-erro" asp-validation-for="Name"></span>
    </div>
    <div class="input-field">
        <input asp-for="Email" />
        <label asp-for="Email"></label>
        <span class="helper-text msg-erro" asp-validation-for="Email"></span>
    </div>
    <div class="input-field">
        <input asp-for="Password" />
        <label asp-for="Password"></label>
        <span class="helper-text msg-erro" asp-validation-for="Password"></span>
    </div>
    <div class="input-field">
        <input asp-for="ConfirmPassword" />
        <label asp-for="ConfirmPassword"></label>
        <span class="helper-text msg-erro" asp-validation-for="ConfirmPassword"></span>
    </div>
    <button id="btnRegister" class="btn waves-effect waves-light brown darken-3 z-depth-0">Registrar</button>
</form>