@model AuctionState

@{
    AuctionViewModel auction = ViewData["Leilao"] as AuctionViewModel;
    User loggedUser = ViewData["loggedUser"] as User;
}

<div class="card estado">
    <div class="red darken-3 white-text center-align">
        <h4>
            <i class="fas fa-hourglass-end"></i>
        </h4>
        <h5>@Model.ToText()</h5>
        <p>Terminou em @auction.FinishAuctionDate.ToString("dd/MM/yyyy").</p>
    </div>
    <div class="center-align red-text text-darken-3">
        <h6>Ganhador</h6>
        <h5>@auction.InitialAmount.ToString("C", CultureInfo.CurrentCulture)</h5>
    </div>
</div>